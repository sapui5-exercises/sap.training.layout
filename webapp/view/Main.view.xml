<mvc:View controllerName="sap.training.controller.Main" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App>
		<pages>
			<Page title="Übung zu Layout Controls">
				<content>
					<Panel headerText="Panel mit Simple Form" class="sapUiResponsiveContentPadding">
						<content>
							<f:SimpleForm layout="ResponsiveGridLayout">
								<f:content>
									<core:Title text="Schlüssel der Flugverbindung"/>
									<Label text="Fluggesellschaft">
										<layoutData>
											<l:GridData span="L2 M4 S12"/>
										</layoutData>
									</Label>
									<Input>
										<layoutData>
											<l:GridData span="L10 M8 S12"/>
										</layoutData>
									</Input>
									<Label text="Flugnummer">
										<layoutData>
											<l:GridData span="L2 M4 S12"/>
										</layoutData>
									</Label>
									<Input>
										<layoutData>
											<l:GridData span="L10 M8 S12"/>
										</layoutData>
									</Input>
									<Button text="Submit">
										<layoutData>
											<l:GridData indent="M4" span="L2 M8 S12"/>
										</layoutData>
									</Button>
								</f:content>
								<f:title>
									<core:Title text="Simple Form mit Responsive GridLayout"/>
								</f:title>
							</f:SimpleForm>
							<Image src="img/plane.png" width="100%" class="sapUiHideOnPhone"></Image>
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>